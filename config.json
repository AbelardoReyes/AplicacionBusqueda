{
  "MercadoLibre": {
    "url": "https://www.mercadolibre.com.mx",
    "actions": [
      {
        "action": "send_keys",
        "selector": "input[name='as_word']",
        "value": "Laptops"
      },
      {
        "action": "submit",
        "selector": "form.nav-search"
      }
    ],
    "fields": {
      "title": "h2.ui-search-item__title",
      "price": ".ui-search-price__second-line span.andes-money-amount__fraction"
    },
    "container_selector": ".ui-search-layout__item",
    "pagination": {
      "next_button_selector": ".andes-pagination__button.andes-pagination__button--next a"
    },
    "max_pages": 2
  },
  "Amazon": {
    "url": "https://www.amazon.com.mx/",
    "actions": [
      {
        "action": "send_keys",
        "selector": "#twotabsearchtextbox",
        "value": "Laptops"
      },
      {
        "action": "send_keys",
        "selector": "#twotabsearchtextbox",
        "value": "\n"
      }
    ],
    "fields": {
      "title": ".a-size-base-plus.a-color-base.a-text-normal"
    },
    "pagination": {
      "next_button_selector": ".s-pagination-next",
      "max_pages": 2
    }
  }
}
