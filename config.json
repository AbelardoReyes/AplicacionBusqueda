{
  "Merca": {
    "url": "https://www.mercadolibre.com.mx",
    "actions": [
      {
        "action": "send_keys",
        "selector": "input[name='as_word']",
        "value": "Laptops"
      },
      {
        "action": "submit",
        "selector": "form.nav-search"
      }
    ],
    "fields": {
      "title": ".ui-search-item__title",
      "price": ".ui-search-price__second-line .andes-money-amount__fraction",
      "list_currency": ".ui-search-price__second-line .andes-money-amount__currency-symbol",
      "rating": ".ui-search-reviews__rating-number"
    },
    "pagination": {
      "next_button_selector": ".andes-pagination__button.andes-pagination__button--next a"
    },
    "max_pages": 2
  },
  "cyberpuerta": {
    "url": "https://www.cyberpuerta.mx",
    "actions": [
      {
        "action": "send_keys",
        "selector": "input[name='searchparam']",
        "value": "Laptops"
      },
      {
        "action": "submit",
        "selector": "form.search-form"
      }
    ],
    "fields": {
      "title": ".emproduct_right_title",
      "price": ".emproduct_right_price label.price",
      "old_price": ".emproduct_right_price .oldPrice del",
      "sku": ".emproduct_right_artnum",
      "rating": ".cpreviews_stars_box_percent",
      "reviews": ".reviews-total-txt a",
      "processor": ".emproduct_right_attribute li:nth-child(1) .content",
      "ram": ".emproduct_right_attribute li:nth-child(3) .content",
      "storage": ".emproduct_right_attribute li:nth-child(4) .content",
      "resolution": ".emproduct_right_attribute li:nth-child(5) .content",
      "os": ".emproduct_right_attribute li:nth-child(7) .content"
    },
    "pagination": {
      "next_button_selector": ".pager .next"
    },
    "max_pages": 2
  }
}
