{
  "mercadolibre": {
    "url": "https://www.mercadolibre.com.mx",
    "actions": [
      {
        "action": "send_keys",
        "selector": "input[name='as_word']",
        "value": "Laptops"
      },
      {
        "action": "submit",
        "selector": "form.nav-search"
      }
    ],
    "fields": {
      "title": ".ui-search-item__title",
      "price": ".ui-search-price__second-line .andes-money-amount__fraction",
      "list_currency": ".ui-search-price__second-line .andes-money-amount__currency-symbol",
      "rating": ".ui-search-reviews__rating-number"
    },
    "pagination": {
      "next_button_selector": ".andes-pagination__button.andes-pagination__button--next a"
    },
    "max_pages": 3
  }
}
